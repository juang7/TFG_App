<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juangarca.tfg.NewMemberActivity"
    tools:showIn="@layout/activity_new_member">

    <TextView android:id="@+id/t_grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:" />

    <EditText android:id="@+id/id"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_grupo"/>

    <TextView android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@id/id"/>

    <EditText android:id="@+id/name"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_name"/>

    <TextView android:id="@+id/t_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname:"
        android:layout_below="@id/name"/>

    <EditText android:id="@+id/surname"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_surname"/>

    <TextView android:id="@+id/t_fechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento(dd/mm/aaaa):"
        android:layout_below="@id/surname"/>

    <EditText android:id="@+id/fechaNacimiento"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_fechaNacimiento"/>

    <Button android:id="@+id/bBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
